extends ../layout/index.pug

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Negocios
            span.font-normal Inmobiliarios
        h2.text-center.text-2xl.font-extrabold= pagina


        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/registro" noValidate)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="nombre") Tu Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Jack Sparrow" type="text" name="nombre" value= usuario.nombre)
                        
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="jacksparrow@blackpearl.com" type="email" name="email" value= usuario.email)
                        
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="******" type="password" name="password")
                    
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="repetir_password") Repetir contraseña
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="******" type="password" name="repetir_password")
                        
                    
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray-500.text-xs(href="/auth/restaurar-password") Olvidé mi password

                    input( class="w-full bg-indigo-600 hover:bg-indigo-700 hover:cursor-pointer text-white font-bold py-3" type="submit" value="Crear Cuenta")